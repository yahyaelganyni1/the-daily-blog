<div class="card w-75">
        <div class="card-body">
                <h1> <%= @user.name%> </h1>
                <h3> <%= @post.title%> </h3>
                <p> <%= @post.text%> </p>
        </div>
</div>

<div class="card w-75">
        <div class="card-body">
        <% @post.comments.each do |comment| %>
                <p><%= comment.user.name %>: <%= comment.text %></p> 
        <%end%>

        </div>
</div>
